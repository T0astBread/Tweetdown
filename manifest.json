{
    "manifest_version": 2,
  
    "name": "Tweetdown",
    "description": "Simple Markdown in tweets",
    "version": "0.2.1",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png",
        "512": "icons/icon512.png",
        "1024": "icons/icon1024.png"
    },
  
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://twitter.com/*"],
            "js": ["formatter.js"],
            "css": ["mdstyles.css"]
        }
    ]
  }
